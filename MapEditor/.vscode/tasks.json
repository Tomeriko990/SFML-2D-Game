{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build mapeditor",
            "type": "shell",
            "command": "/opt/homebrew/opt/llvm/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-arch",
                "arm64",
                "-g",
                "${workspaceFolder}/MapEditor/main.cpp",
                "${workspaceFolder}/MapEditor/Grid.cpp",
                "${workspaceFolder}/MapEditor/MouseTile.cpp",
                "${workspaceFolder}/MapEditor/Map_E.cpp",
                "${workspaceFolder}/core/include",
                "-o",
                "${workspaceFolder}/MapEditor/main",
                "-I${workspaceFolder}/core/include", 
                "-L${workspaceFolder}/core", 
                "-lcore",
                "-I/opt/homebrew/Cellar/sfml/2.6.1/include",
                "-L/opt/homebrew/Cellar/sfml/2.6.1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "dependsOn": "copy core headers",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/opt/homebrew/opt/llvm/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++"
        }
    ]
}