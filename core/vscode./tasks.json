{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build core static library",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-arch",
                "arm64",
                "-g",
                "-c",
                "${workspaceFolder}/core/mapData.cpp",
                "-o",
                "${workspaceFolder}/core/mapData.o",
                "-I/opt/homebrew/Cellar/sfml/2.6.1/include",
				"-L/opt/homebrew/Cellar/sfml/2.6.1/lib",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "create static library",
            "type": "shell",
            "command": "ar",
            "args": [
                "rcs",
                "${workspaceFolder}/core/libcore.a",
                "${workspaceFolder}/core/mapData.o",
                "-I/opt/homebrew/Cellar/sfml/2.6.1/include",
				"-L/opt/homebrew/Cellar/sfml/2.6.1/lib",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system"
            ],
            "dependsOn": "build core static library",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "copy core headers",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/core/*.h",
                "${workspaceFolder}/core/include",
                "-I/opt/homebrew/Cellar/sfml/2.6.1/include",
				"-L/opt/homebrew/Cellar/sfml/2.6.1/lib",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system"
            ],
            "group": "build",
            "problemMatcher": [],
            "dependsOn": ["build core static library", "create static library"]
        }
    ]
}

